<hr />

<div class="grid">

    <div>
        <h3>Contents</h3>
        <ul>
            {% for item in collections.all | setMyCustomOrder | getListTopLevel(page) %}
                <li>
                    {% if item.active %}
                        <strong>{{ item.title | safe }}</strong>
                    {% else %}
                        <a href="{{ item.url }}">{{ item.title | safe }}</a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>

    <div>
        <h3>Recent updates</h3>
        <ul>
            {% for item in collections.all | setMyCustomOrder | getListRecentUpdated(page, 5) %}
                <li>
                    <small>{{ item.date | readableDateShort }}</small>
                    {% if item.active %}
                        <strong>{{ item.title | safe }}</strong>
                    {% else %}
                        <a href="{{ item.url }}">{{ item.title | safe }}</a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>

</div>

